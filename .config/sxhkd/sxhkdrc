#basic binds

super + shift + m
        $TERMINAL -e dman . 

super + r ; {s, c}
        {(killall ffmpeg && notify screencast stopped) || (notify screencast started && screencast), (killall mpv || mpv --no-correct-pts --no-osc --input-conf=/dev/null --title='mpvfloat' /dev/video0)}

super + shift + Return
        st

super + shift + l
        slock & sleep 0.5 && xset dpms force off

super + shift + v
        code

super + shift + d
        datagrip

super + shift + b
        blender

super + o ; {b, c}
        {openbrowser true, openbrowser false}

super + o ; m ; {b, c}
        {dbrowserbookmarks true, dbrowserbookmarks false}

super + s ; k
        (killall screenkey && notify screenkey stopped) || (screenkey_exec && notify screenkey started )

super + shift + s
        prompt "Are you sure you want to shutdown?" "shutdown -h now"

super + shift + r
        prompt "Are you sure you want to restart?" "shutdown -r now"

# Make sxhkd reload its configuration files
super + Escape
        pkill -USR1 -x sxhkd

super + shift + h
        killall unclutter || unclutter -idle 1

super + shift + p
        dpro

# super + e ; {s, p}
#         {deditor ~/.local/bin, deditor ~/phone_apps 1}
